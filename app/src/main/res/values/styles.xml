<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.ApplicationMCS.VerificationCodeEditText" parent="">
        <item name="vcet_numberOfSlots">5</item>
    </style>
    <style name="Widget.ApplicationMCS.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">56dp</item>
    </style>
    <style name="Widget.ApplicationMCS.Button.Primary">
        <item name="backgroundTint">@color/brand_orange</item>
    </style>
    <style name="Widget.ApplicationMCS.Button.Secondary">
        <item name="backgroundTint">@color/brand_turquoise</item>
    </style>
    <style name="Widget.ApplicationMCS.BackButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:src">@drawable/ic_arrow_back_black_24</item>
    </style>
    <style name="Widget.ApplicationMCS.LinkButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="maxWidth">300dp</item>
        <item name="minHeight">48dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="android:textColor">@drawable/selector_color_link_button</item>
    </style>
    <style name="Widget.ApplicationMCS.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@color/brand_orange</item>
    </style>
    <style name="Widget.ApplicationMCS.CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/brand_blue_500</item>
    </style>
</resources>